<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"             
             xmlns:i18n="clr-namespace:PinkWorld.Prism.Helpers"
             xmlns:prism="http://prismlibrary.com" xmlns:buttons="clr-namespace:Syncfusion.XForms.Buttons;assembly=Syncfusion.Buttons.XForms"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="PinkWorld.Prism.Views.RegisterSelfExaminationPage">
    
    
    <StackLayout Margin="20,20,20,20" Spacing="15">
            <ListView x:Name="navigationDrawerList" RowHeight="120" SeparatorVisibility="Default" BackgroundColor="Transparent" ItemsSource="{Binding Questions}" HasUnevenRows="False">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                        <Grid Padding="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="20" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0"   
                                               FontAttributes="Bold"
                                               TextColor="Black"
                                               Text="{Binding Id}"/>
                            <Label Grid.Column="1"
                                                   VerticalOptions="Center"
                                                   FontAttributes="Bold"
                                                   TextColor="Black"
                                                   Text="{Binding Question}"/>
                            <Entry  Grid.Row="1"
                                            Grid.Column="1"
                                            VerticalOptions="EndAndExpand"
                                            Text="{Binding Answer.Respond}"
                                            Placeholder="Entry your answer">
                            </Entry>
                        </Grid>
                    </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        <StackLayout
                        HorizontalOptions="Center"
                        Orientation="Horizontal"
                        Spacing="1"
                        VerticalOptions="End">
            <!--  Send button  -->
            <buttons:SfButton
                            Command="{Binding RegisterSelfExaminationCommand}"
                            CornerRadius="4"
                            Text="{i18n:Translate Send}" />

        </StackLayout>
    </StackLayout>
</ContentPage>